<div ng-controller="app.views.home as vm">
    <div class="center-page"><h3>@L("WellcomeMessage")</h3></div>
    <div class="row">
        <div class="col-md-12">
            <b> Private tickets</b>
            <div class="card-box widget-inline">
                <div class="row">
                    <div class="col-lg-3 col-sm-6" ng-repeat="c in vm.ticketCounts">
                        <div class="widget-inline-box text-center">
                            <h3 class="m-t-10"><i class="text-primary mdi mdi-cellphone-link"></i> <b data-plugin="counterup">{{c.count}}</b></h3>
                            <p class="text-muted">{{c.statusName}}</p>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <b> Professional tickets</b>
            <div class="card-box widget-inline">
                <div class="row">
                    <div class="col-lg-3 col-sm-6" ng-repeat="c in vm.ticketBatchItemCounts">
                        <div class="widget-inline-box text-center">
                            <h3 class="m-t-10"><i class="text-primary mdi mdi-cellphone-link"></i> <b data-plugin="counterup">{{c.count}}</b></h3>
                            <p class="text-muted">{{c.statusName}}</p>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>