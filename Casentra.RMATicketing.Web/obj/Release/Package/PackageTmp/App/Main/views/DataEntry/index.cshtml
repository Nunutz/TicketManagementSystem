<div ng-controller="app.views.dataentry.index as vm">
    
    <div class="row">
        <div class="col-lg-4">
            <div class="row">
                <h4> Brands</h4>
                <button ng-click="vm.openBrandCreationModal()" class="btn btn-primary pull-right"><i class="fa fa-plus"></i> Create</button>
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="brand in vm.brands">
                            <td>
                                <div ng-hide="vm.editingBrandData[brand.id]">{{brand.id}} </div>


                            </td>

                            <td>

                                <div ng-hide="vm.editingBrandData[brand.id]">{{brand.name}} </div>

                                <div ng-show="vm.editingBrandData[brand.id]">
                                    <input type="text" ng-model="brand.name" required maxlength="60" />
                                </div>
                            </td>
                            <td>
                                <button class="btn btn-success" ng-hide="vm.editingBrandData[brand.id]" ng-click="vm.modifyBrand(brand)">Modify</button>
                                <button class="btn btn-info" ng-show="vm.editingBrandData[brand.id]" ng-click="vm.updateBrand(brand)">Update</button>

                                <button class="btn btn-danger" ng-hide="vm.editingBrandData[brand.id]" ng-click="vm.removeBrand(brand)">Remove</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="row">     
        <div class="col-lg-12">
            <div class="row">
                <h4> Products</h4>
                <button ng-click="vm.openProductCreationModal()" class="btn btn-primary pull-right"><i class="fa fa-plus"></i> Create</button>
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Brand</th>
                            <th>Name</th>
                            <th>Action </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="product in vm.products">
                            <td>
                               
                                <div ng-hide="vm.editingProductData[product.id]">{{product.id}} </div>
                            </td>
                            <td>
                                {{product.brand}}
                                <input type="hidden" ng-model="product.brandId" />
                            </td>
                            <td>
                                <div ng-hide="vm.editingProductData[product.id]">{{product.name}} </div>

                                <div ng-show="vm.editingProductData[product.id]">
                                    <input type="text" ng-model="product.name" required maxlength="60" />
                                </div>
                            </td>
                            <td>
                                <button class="btn btn-success" ng-hide="vm.editingProductData[product.id]" ng-click="vm.modifyProduct(product)">Modify</button>
                                <button class="btn btn-info" ng-show="vm.editingProductData[product.id]" ng-click="vm.updateProduct(product)">Update</button>
                                <button class="btn btn-danger" ng-hide="vm.editingProductData[product.id]" ng-click="vm.removeProduct(product)">Remove</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
         
