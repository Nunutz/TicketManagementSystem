
    <section class="matter">
        <div class="container">
            <form name="ticketForm" role="form" novalidate class="form-validation">
                <div id="divTicketInfo">
                    <div class="row alert alert-info alert-dismissible fade in">
                        <div class="col-md-4">
                            <div class="row">
                                <label class="col-md-12 md-ticket-label">
                                    @L("TicketNo") #: {{vm.ticket.ticketNo}}
                                    <input hidden data-ng-model="vm.ticket.ticketNo" />
                                </label>

                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="row">
                                <label class="col-md-12 md-ticket-label">
                                    @L("CreatedDate") #: {{vm.ticket.createdDate}}
                                </label>

                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="row">
                                @*<label class="col-md-12 md-ticket-label">
                                    @L("Status") #: {{vm.ticket.ticketStatusName}}
                                </label>*@

                            </div>
                        </div>
                    </div>
                   
                    <div class="row alert alert-success ">
                        <div class="col-md-4">
                            <div class="row">
                                <label class="col-md-12 md-ticket-label">
                                    @L("Firstname") : {{vm.ticket.firstName}}
                                </label>
                                
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="row">
                                <label class="col-md-12 md-ticket-label">
                                    @L("MobilePhone") : {{vm.ticket.mobileNumber}}
                                </label>
                                
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="row">
                                <label class="col-md-12 md-ticket-label">
                                    @L("EmailID") : {{vm.ticket.email}}
                                </label>
                              
                            </div>
                        </div>
                    </div>
                    <hr />

                    <div class="row">
                       
                            <table class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>@L("TicketNo")</th>
                                        <th>@L("IMEINumber")</th>
                                        <th>@L("ProductName")</th>
                                        <th>@L("BrandName")</th>

                                        <th>@L("PhonesProblem")</th>
                                        <th>@L("Accessories")</th>
                                        <th>@L("Status")</th>
                                        <th>@L("Action")</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="ticket in vm.batchItems">
                                        <td>{{ticket.ticketNo}}</td>
                                        <td>{{ticket.imeiNumber}}</td>
                                        <td>{{ticket.product}}</td>
                                        <td>{{ticket.brand}}</td>
                                        <td>{{ticket.phoneProblem}}</td>
                                        <td>{{ticket.accessory}}</td>
                                        <td>{{ticket.ticketStatusName}}</td>
                                        <td> <button id="btnUpdateTicket" class="btn btn-success" ng-click="vm.openTicketModal(ticket.batchItemId)" data-id="{{ticket.batchItemId}}">Update Ticket</button></td>
                                    </tr>
                                </tbody>
                            </table>

                        </div>
                    <hr />
                    <div class="row">

                        <table class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                   
                                    <th>@L("ProductName")</th>
                                    <th>Spare Name</th>
                                    <th>Quantity</th>
                                    <th>Created Date</th>
                                    <th>Is Delivered</th>
                                    @*<th>Delivered Date</th>*@
                                    <th>Note</th>
                                    <th>@L("Action")</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="spare in vm.spareParts">
                                    <td>{{spare.model}}</td>
                                    <td>{{spare.spareName}}</td>
                                    <td>{{spare.quantity}}</td>
                                    <td>{{spare.createdDate}}</td>                                   
                                    <td>
                                    @*<div id="{{spare.spareId}}" class="checkbox checkbox-primary">*@
                                        <input class="checkbox checkbox-primary" type="checkbox" ng-model="spare.isDelivered" >
                                        
                                    @*</div>*@
                                    </td>
                                    @*<td>{{spare.deliveredDate}}</td>*@
                                    <td>
                                        <input type="text" class="md-data-view-input" name="note" data-ng-model="spare.note" />
                                    </td>
                                    <td> 
                                       <button id="btnUpdateTicket" class="btn btn-success" ng-click="vm.updateSpare(spare)" data-id="{{spare.batchItemId}}">Update</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                    </div>
                    <hr />
                    <div class="row">
                        <div>
                            <div> {{vm.ticket.issueSummary}}</div>
                            <input hidden data-ng-model="vm.ticket.issueSummary" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="pull-right ">
                            <button class="btn btn-default btn-info" ng-click="vm.cancel()">
                                @L("Cancel")
                            </button>
                        </div>
                    </div>
                </div>
              
            </form>

           
        </div>
    </section>


