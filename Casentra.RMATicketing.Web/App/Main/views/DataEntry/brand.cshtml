
<div>
    <form name="createForm" role="form" novalidate class="form-validation">
        <div class="modal-header">
            <h4 class="modal-title">
                <span>Brand</span>
            </h4>
        </div>
        <div class="modal-body">

            <div class="form-group">
                <label>Brand Name</label>
                <input auto-focus class="form-control" type="text" name="brandName" ng-model="vm.brand.name" required maxlength="50" >
            </div>
            <div>
                <span class="help-block text-danger" ng-show="!createForm.brandName.$valid && createForm.brandName.$dirty">Invalid</span>
            </div>

            
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-primary" ng-click="vm.cancel()">@L("Cancel")</button>
            <button type="submit" class="btn btn-success" ng-click="vm.save()" ng-disabled="createForm.$invalid"><i class="fa fa-save"></i> <span>@L("Save")</span></button>
        </div>
    </form>
</div>